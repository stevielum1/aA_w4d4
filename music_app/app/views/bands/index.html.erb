<h1>List of All Bands</h1>

<%= render 'shared/errors' %>

<table>
  <tr>
    <th>Band</th>
    <th>Page</th>
  </tr>
  <% @bands.each do |band| %>
    <tr>
      <td><%= band.name %></td>
      <td><a href="<%= band_url(band) %>">Link</a></td>
    </tr>
  <% end %>
</table>

<div class="button_container">
  <button type="submit" form="create_band_form">Create band</button>
</div>

<form id="create_band_form" action="<%= new_band_url %>" method="get">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
</form>

<% content_for :footer do %>
  Band index page
<% end %>
