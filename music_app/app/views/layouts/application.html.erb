<!DOCTYPE html>
<html>
  <head>
    <title>Steven's Music App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style>

      header {
        display: flex;
        font-family: sans-serif;
        font-size: 40px;
        justify-content: space-between;
        align-items: center;
      }

      header button {
        padding: 10px;
        font-size: 32px;
      }

      nav {
        display: flex;
        align-items: center;
        font-size: 20px;
      }
      nav button {
        padding: 10px;
        font-size: 16px;
        margin-left: 10px;
      }

      #logout_button {
        font-size: 16px;
      }

      nav input[type="submit"] {
        border: none;
        background-color: inherit;
        font-size: inherit;
      }

      button a {
        text-decoration: none;
        color: black;
      }

      table {
        border-spacing: 0;
        border-collapse: collapse;
      }

      th {
        background-color: darkgray;
      }

      th, td {
        border: 1px solid black;
        padding: 5px;
      }

      footer {
        margin-top: 50px;
      }

      .errors {
        color: red;
        font-size: 20px;
        font-family: inherit;
      }

    </style>

  </head>

  <body>
    <header>
      <button>
        <a href="<%= bands_url %>">Steven's Music App</a>
      </button>
      <nav>
        <% if current_user %>
        Logged in as: <%= current_user.email %>
        <button>
          <form action=" <%=session_url %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input id="logout_button" type="submit" value="Log out">
          </form>
        </button>
        <% else %>
        <button>
          <a href="<%= new_session_url %>">Log in</a>
        </button>
        <button>
          <a href="<%= new_user_url %>">Sign Up</a>
        </button>
        <% end %>
      </nav>
    </header>

    <%= yield %>
  </body>
  <footer>
    <%= yield :footer %>
  </footer>
</html>
